		end
		-------
		
	elseif choosen_hitbox=="torso" then
		if damage >= 18 then
			damage = 17
		end
		
		hud_blink_timer.torso=time_global()
		health.torso=health.torso-damage
--		if health.torso<=0 then health.torso=0 actor_menu.set_msg(1, "Torso fatally damaged!", 8) end
