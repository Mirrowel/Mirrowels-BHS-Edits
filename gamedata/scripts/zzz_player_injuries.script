		EmptyPreviewBars()
		focused_item=nil
	end
end

local function ActorMenu_on_mode_changed(mode,last_mode)
	if last_mode==1 then --inv closed
		EmptyPreviewBars()
		focused_item=nil
	elseif last_mode==4 then --looting closed
		EmptyPreviewBars()
		focused_item=nil
	end
end

